{
  "name": "nuxt-pwa-vuetify-firebase-ssr-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Nuxt.js + PWA + Vuetify.js + Firebase starter project",
  "keywords": [
    "nuxt",
    "nuxt pwa",
    "nuxt.js",
    "nuxtjs",
    "vue",
    "vue pwa",
    "vue ssr",
    "vue universal",
    "vue.js",
    "vuejs",
    "vuetify",
    "vuetify.js",
    "vuetifyjs",
    "firebase"
  ],
  "homepage": "https://github.com/jefrydco/nuxt-pwa-vuetify-firebase-ssr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefrydco/nuxt-pwa-vuetify-firebase-ssr"
  },
  "license": "MIT",
  "author": {
    "name": "Jefry Dewangga",
    "url": "https://jefrydco.id"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "test": "yarn test:unit",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:unit": "jest",
    "coverage": "codecov",
    "build:firebase": "yarn clean && yarn build && yarn copy && cd \"functions\" && yarn",
    "clean": "yarn clean:public && yarn clean:functions && yarn clean:static",
    "clean:functions": "rimraf \"functions/node_modules\" && rimraf \"functions/.nuxt\"",
    "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf \"public/_nuxt\"",
    "clean:static": "rimraf \"src/static/sw.js\"",
    "copy": "cpx \"functions/.nuxt/dist/*\" \"public/_nuxt\" && cpx \"src/static/**/*.*!(md)\" \"public\"",
    "deploy": "firebase deploy --only functions,hosting",
    "start:firebase": "firebase serve --only functions,hosting"
  },
  "dependencies": {
    "@mdi/font": "^3.3.92",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/component-cache": "^1.1.4",
    "@nuxtjs/dotenv": "^1.3.0",
    "@nuxtjs/google-analytics": "^2.0.2",
    "@nuxtjs/pwa": "^2.6.0",
    "@nuxtjs/sentry": "^2.2.1",
    "@nuxtjs/sitemap": "^0.2.0",
    "lru-cache": "^5.1.1",
    "nuxt": "^2.3.4",
    "nuxt-webfontloader": "^1.0.0",
    "vee-validate": "^2.1.5",
    "vuetify": "^1.4.2",
    "vuetify-loader": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@nuxtjs/eslint-config": "^0.0.1",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "codecov": "^3.1.0",
    "cpx": "^1.5.0",
    "cypress": "^3.1.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-cypress": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^1.0.0",
    "lint-staged": "^8.0.4",
    "node-sass": "^7.0.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.4.1",
    "yarn": ">=1.12.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
